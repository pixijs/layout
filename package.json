{
  "name": "@pixi/layout",
  "version": "2.0.1",
  "description": "A Yoga powered layout library for PixiJS",
  "keywords": [
    "layout",
    "yoga",
    "pixi"
  ],
  "homepage": "https://github.com/pixijs/layout#readme",
  "bugs": {
    "url": "https://github.com/pixijs/layout/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pixijs/layout.git"
  },
  "license": "MIT",
  "author": {
    "name": "PixiJS Team"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./components": {
      "types": "./dist/components/index.d.ts",
      "import": "./dist/components/index.mjs",
      "require": "./dist/components/index.js"
    },
    "./devtools": {
      "types": "./dist/devtools/index.d.ts",
      "import": "./dist/devtools/index.mjs",
      "require": "./dist/devtools/index.js"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "import": "./dist/react/index.mjs",
      "require": "./dist/react/index.js"
    },
    "./tailwind": {
      "types": "./dist/tailwind/index.d.ts",
      "import": "./dist/tailwind/index.mjs",
      "require": "./dist/tailwind/index.js"
    }
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "workspaces": [
    "src",
    "docs"
  ],
  "scripts": {
    "build": "run-s build:lib build:docs",
    "build:lib": "vite build",
    "build:lib:bundle": "vite build --config vite.config.bundle.mts",
    "build:docs": "npm run build:lib:bundle && npm run --workspace docs build",
    "clean": "xs clean",
    "deploy:docs": "npm run build:lib:bundle && npm run deploy --workspace docs",
    "lint:fix": "xs lint --fix",
    "release": "xs bump,test,git-push",
    "publish-ci": "xs publish",
    "start": "run-p start:storybook watch",
    "start:storybook": "storybook dev -p 6006",
    "start:docs": "npm run build:lib:bundle && npm run --workspace docs start",
    "test": "run-s test:unit test:lint test:types",
    "test:lint": "xs lint",
    "test:types": "xs types",
    "pretest:unit": "tsx tests/scripts/generate-story-imports.ts",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest --browser.headless=false",
    "watch": "xs watch",
    "prepare": "husky"
  },
  "lint-staged": {
    "*": [
      "npm run lint:fix"
    ]
  },
  "devDependencies": {
    "@pixi/devtools": "^2.0.1",
    "@pixi/extension-scripts": "^4.0.0",
    "@pixi/react": "8.0.1",
    "@playwright/browser-chromium": "^1.52.0",
    "@playwright/test": "^1.52.0",
    "@storybook/react-vite": "^8.6.12",
    "@types/pixelmatch": "^5.2.6",
    "@types/pngjs": "^6.0.5",
    "@vitest/browser": "^3.1.2",
    "copyfiles": "^2.4.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "mkdirp": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "pixelmatch": "^7.1.0",
    "pixi.js": "^8.9.1",
    "playwright": "^1.52.0",
    "pngjs": "^7.0.0",
    "prettier": "3.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "rollup-plugin-node-externals": "^8.0.0",
    "storybook": "^8.6.12",
    "tsx": "^4.19.3",
    "vite": "^6.3.2",
    "vite-plugin-dts": "^4.5.3",
    "vite-plugin-top-level-await": "^1.5.0",
    "vitest": "^3.1.2",
    "yoga-layout": "^3.2.1"
  },
  "peerDependencies": {
    "pixi.js": "^8",
    "yoga-layout": "^3"
  },
  "optionalDependencies": {
    "@pixi/react": "^8.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "extensionConfig": {
    "docsName": "PixiJS Yoga",
    "docsTitle": "PixiJS Yoga API Documentation",
    "docsDescription": "Documentation for PixiJS Yoga library",
    "docsKeyword": "docs, documentation, pixi, pixijs, yoga, layout"
  },
  "overrides": {
    "react": "$react",
    "react-dom": "$react-dom",
    "pixi.js": "$pixi.js"
  }
}
